
<div class="card-announcement">
    <div class="title-game">
        <a href="{{ path('app_brand_show', {'slug': announcement.game.slug}) }}">
            {{ announcement.brand.name }}
        </a>
    </div>
    <p>
        {% if profile is defined %}
            {{ announcement.content }}
        {% else %}
            {{ announcement.content|excerpt }}
        {% endif %}
    </p>
    <div class="announcement-footer">
        {% if profile is defined %}
            Rédigé le
        {% else %}
            Par <a href="{{ path('app_account_show', {'slug': announcement.account.slug}) }}">{{ announcement.account.nickname }}</a>, le
        {% endif %}
        {{ announcement.createdAt|date('d/m/Y') }}
    </div>
</div>